#include <windows.h>

#define IDD_CONFIG 101
#define IDC_NETPLAY_ENABLED 1001
#define IDC_LOCAL_PORT 1004
#define IDC_ROMS_DIR 1005
#define IDC_NETPLAY_LOCKSTEP 1012

#define IDC_ROOM_SERVER_URL 1013
#define IDC_ROOM_API_KEY 1014
#define IDC_ROOM_CODE 1015


IDD_CONFIG DIALOGEX 0, 0, 260, 250
STYLE DS_SETFONT | DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "snes-online Configuration"
FONT 9, "Segoe UI"
BEGIN
    CONTROL "Enable netplay", IDC_NETPLAY_ENABLED, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 10, 10, 120, 12

    CONTROL "Android-compatible lockstep", IDC_NETPLAY_LOCKSTEP, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 140, 10, 120, 12

    LTEXT "Local UDP Port:", -1, 10, 28, 70, 10
    EDITTEXT IDC_LOCAL_PORT, 80, 26, 60, 14, ES_NUMBER | WS_TABSTOP

    LTEXT "ROMs folder:", -1, 10, 50, 60, 10
    EDITTEXT IDC_ROMS_DIR, 80, 48, 165, 14, ES_AUTOHSCROLL

    GROUPBOX "Room", -1, 10, 72, 235, 74
    LTEXT "Server URL:", -1, 18, 86, 55, 10
    EDITTEXT IDC_ROOM_SERVER_URL, 80, 84, 165, 14, ES_AUTOHSCROLL
    LTEXT "Password:", -1, 18, 104, 55, 10
    EDITTEXT IDC_ROOM_API_KEY, 80, 102, 165, 14, ES_AUTOHSCROLL | ES_PASSWORD
    LTEXT "Code:", -1, 18, 122, 55, 10
    EDITTEXT IDC_ROOM_CODE, 80, 120, 165, 14, ES_AUTOHSCROLL

    LTEXT "Netplay connects on game start; first device becomes Player 1.", -1, 10, 150, 235, 18

    DEFPUSHBUTTON "OK", IDOK, 140, 230, 50, 14
    PUSHBUTTON "Cancel", IDCANCEL, 195, 230, 50, 14
END
