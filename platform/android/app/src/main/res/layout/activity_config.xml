<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/configRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ROM (.sfc/.smc)" />

        <EditText
            android:id="@+id/editRomPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pick a ROM file" />

        <Button
            android:id="@+id/btnPickRom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick ROM" />

        <Switch
            android:id="@+id/switchOnscreenControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Show on-screen controls (touch)" />

        <Switch
            android:id="@+id/switchShowSaveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show in-game State button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Audio" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Netplay" />

        <Switch
            android:id="@+id/switchNetplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Netplay" />
        <EditText
            android:id="@+id/editLocalPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Local UDP port (default 7000)"
            android:inputType="number" />

        <EditText
            android:id="@+id/editSecret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Secret word (for hosting)"
            android:inputType="text"
            android:maxLines="1" />

        <Button
            android:id="@+id/btnStartConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Start connection" />

        <TextView
            android:id="@+id/txtOr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="OR" />

        <EditText
            android:id="@+id/editConnectionCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Connection string (ip:port:secret)"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnJoinConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join connection" />

        <LinearLayout
            android:id="@+id/hostWaitingRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtHostWaiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <ImageButton
                android:id="@+id/btnCopyConnectionIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@android:color/transparent"
                android:contentDescription="Copy connection string"
                android:src="@drawable/ic_copy" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtJoinTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text=""
            android:visibility="gone" />

        <Button
            android:id="@+id/btnCancelConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Start Game" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="" />

    </LinearLayout>

</ScrollView>
